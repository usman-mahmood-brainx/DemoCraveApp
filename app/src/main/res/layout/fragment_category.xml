<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CategoryFragment.CategoryFragment">

    <TextView
        android:id="@+id/tvLabelReviewMap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Review Map"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rlChart"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelReviewMap"
        app:layout_constraintWidth_percent="0.5"
        android:padding="10dp"
        >
<!--        <ProgressBar-->
<!--            android:id="@+id/myProgressBar"-->
<!--            style="?android:attr/progressBarStyle"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="200dp"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:progressDrawable="@color/purple_200"-->
<!--            android:progress="100"-->
<!--            />-->

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tvSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="555"
            android:textColor="#4E5961"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>



    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/rlChart"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelReviewMap"
        android:paddingHorizontal="10dp"
        app:layout_constraintWidth_percent="0.5"/>



</androidx.constraintlayout.widget.ConstraintLayout>